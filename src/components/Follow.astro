    <FollowButton normalImage={jordi} noseImage={noseJordi} name="@cala.mitat" instagram="https://www.instagram.com/cala.mitat/?hl=es" tiktok="https://www.tiktok.com/@cala.mitat?lang=es" />
    <FollowButton normalImage={aleix} noseImage={noseAleix} name="@aleixcalafell" instagram="https://www.instagram.com/aleixcalafell/" tiktok="https://www.tiktok.com/@aleixcalafell?_t=ZN-8ugNRI8F7zi&_r=1" />      
  </div>
</section>